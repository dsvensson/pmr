CC = {CC}
CFLAGS = -Wall -O2 -g
MODULES = pmr.o md5c.o support.o

%.o:	%.c
	$(CC) $(CFLAGS) -c $<

pmr:	$(MODULES)
	$(CC) $(CFLAGS) -o pmr $(MODULES)

pmr.o:	pmr.c md5.h support.h
support.o:	support.c support.h
md5c.o:	md5c.c md5.h

install:	pmr
	mkdir -p {PREFIX}/bin
	mkdir -p {PREFIX}/man/man1
	install pmr {PREFIX}/bin/
	install pmr.1 {PREFIX}/man/man1/

check:	pmr
	./check.sh

mydist:
	mkdir -p dist
	cp configure Makefile.in pmr.c pmr.1 ChangeLog COPYING md5c.c md5.h md5.copyright dist/

clean:	
	rm -f *.o pmr
