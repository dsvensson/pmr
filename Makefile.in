CC = gcc
CFLAGS = -W -Wall -O2

pmr:	pmr.o md5c.o
	$(CC) $(CFLAGS) -o pmr pmr.o md5c.o

pmr.o:	pmr.c md5.h
	$(CC) $(CFLAGS) -c pmr.c

md5c.o:	md5c.c md5.h
	$(CC) $(CFLAGS) -c md5c.c

install:	pmr
	mkdir -p {PREFIX}/bin
	mkdir -p {PREFIX}/man/man1
	install pmr {PREFIX}/bin/
	install pmr.1 {PREFIX}/man/man1/

test:	pmr
	./pmr -p < /dev/zero > /dev/zero

mydist:
	mkdir -p dist
	cp configure Makefile.in pmr.c pmr.1 ChangeLog md5c.c md5.h md5.copyright dist/

clean:	
	rm -f *.o pmr
